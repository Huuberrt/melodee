@*
    Optimized Image Component to prevent layout shifts and improve performance
    Addresses Lighthouse: Layout shift issues and image delivery optimization
*@

<img src="@Src" 
     alt="@Alt" 
     class="@($"responsive-img {Class}")"
     loading="lazy"
     decoding="async"
     width="@Width"
     height="@Height"
     style="@($"aspect-ratio: {Width}/{Height}; {Style}")"
     @attributes="AdditionalAttributes" />

@code {
    [Parameter] public string Src { get; set; } = string.Empty;
    [Parameter] public string Alt { get; set; } = string.Empty;
    [Parameter] public string Class { get; set; } = string.Empty;
    [Parameter] public string Style { get; set; } = string.Empty;
    [Parameter] public int Width { get; set; } = 300;
    [Parameter] public int Height { get; set; } = 200;
    [Parameter(CaptureUnmatchedValues = true)] public Dictionary<string, object>? AdditionalAttributes { get; set; }
}